{
  "info": {
    "name": "Precious Metals Tracker API",
    "_postman_id": "precious-metals-tracker",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Service",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securePassword123\"\n}"
            },
            "url": "http://localhost:8081/register"
          }
        },
        {
          "name": "Login (get session)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/x-www-form-urlencoded" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "username", "value": "user@example.com" },
                { "key": "password", "value": "securePassword123" }
              ]
            },
            "url": "http://localhost:8081/login"
          }
        },
        {
          "name": "Record Metal Buy",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"asset\": \"золото\",\n  \"price\": 6450.5\n}"
            },
            "url": "http://localhost:8081/api/transactions/metal/buy"
          }
        },
        {
          "name": "Record Metal Sell",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"asset\": \"серебро\",\n  \"price\": 82.3\n}"
            },
            "url": "http://localhost:8081/api/transactions/metal/sell"
          }
        },
        {
          "name": "Record Currency Buy",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"asset\": \"USD\",\n  \"price\": 93.5\n}"
            },
            "url": "http://localhost:8081/api/transactions/currency/buy"
          }
        },
        {
          "name": "Record Currency Sell",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"asset\": \"EUR\",\n  \"price\": 101.2\n}"
            },
            "url": "http://localhost:8081/api/transactions/currency/sell"
          }
        }
      ]
    },
    {
      "name": "Metal Price Service",
      "item": [
        {
          "name": "Check Gold Price (buy)",
          "request": {
            "method": "GET",
            "url": "http://localhost:8082/check?metal=GOLD&target=6000&operation=buy"
          }
        },
        {
          "name": "Get Gold History (last 7 days)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8082/history?metal=GOLD&from={{today-7}}&to={{today}}",
              "host": ["http", "localhost"],
              "port": "8082",
              "path": ["history"],
              "query": [
                { "key": "metal", "value": "GOLD" },
                { "key": "from", "value": "{{today-7}}" },
                { "key": "to", "value": "{{today}}" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Currency Price Service",
      "item": [
        {
          "name": "Check USD Price (sell)",
          "request": {
            "method": "GET",
            "url": "http://localhost:8083/check?currency=USD&target=95&operation=sell"
          }
        },
        {
          "name": "Get EUR History (last 7 days)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8083/history?currency=EUR&from={{today-7}}&to={{today}}",
              "host": ["http", "localhost"],
              "port": "8083",
              "path": ["history"],
              "query": [
                { "key": "currency", "value": "EUR" },
                { "key": "from", "value": "{{today-7}}" },
                { "key": "to", "value": "{{today}}" }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "today",
      "value": "{{toISOString(new Date())}}",
      "type": "any"
    },
    {
      "key": "today-7",
      "value": "{{toISOString(new Date(Date.now() - 7 * 24 * 60 * 60 * 1000))}}",
      "type": "any"
    }
  ]
}